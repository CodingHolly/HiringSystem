<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.holly.back_end.mapper.UserMapper">
    <insert id="insert">
        insert into user (id, username, phone, password, role)
        values (#{id}, #{username}, #{phone}, #{password}, #{role})
    </insert>

    <select id="getByPhone" resultType="com.holly.back_end.entity.User">
        select *
        from user
        where phone = #{phone}
    </select>
    <select id="getById" resultType="com.holly.back_end.entity.User">
        select *
        from user
        where id = #{id}
    </select>
</mapper>